{
  "name": "Tokkatot Smart Poultry System",
  "short_name": "Tokkatot",
  "description": "Smart Poultry Disease Detection and Farm Management System",
  "version": "1.0.0",
  "manifest_version": 2,
  "start_url": "/frontend/pages/index.html",
  "scope": "/frontend/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#00cc99",
  "background_color": "#ffc966",
  "lang": "km",
  "dir": "ltr",
  "categories": [
    "productivity",
    "utilities",
    "health"
  ],
  "icons": [
    {
      "src": "./assets/images/tokkatot logo-02.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./assets/images/tokkatot logo-02.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "./assets/images/tokkatot logo-02.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "./assets/images/tokkatot logo-02.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Disease Detection",
      "short_name": "Detection",
      "description": "Quick access to chicken disease detection",
      "url": "/frontend/pages/disease-detection.html",
      "icons": [
        {
          "src": "./assets/images/tokkatot logo-02.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Home",
      "description": "Access farm dashboard",
      "url": "/frontend/pages/index.html",
      "icons": [
        {
          "src": "./assets/images/tokkatot logo-02.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Configure system settings",
      "url": "/frontend/pages/settings.html",
      "icons": [
        {
          "src": "./assets/images/tokkatot logo-02.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 320
  },
  "protocol_handlers": [
    {
      "protocol": "web+tokkatot",
      "url": "/frontend/pages/index.html?action=%s"
    }
  ]
}